{
  "name": "jsonschematoxsd",
  "title": "JSON Schema to XSD",
  "version": "1.0.0",
  "type": "flogo:activity",
  "description": "Converts a JSON Schema string to an XML Schema Definition (XSD) string.",
  "ref": "github.com/milindpandav/activity/jsonschematoxsd",
  "settings": [
    {
      "name": "rootElementName",
      "type": "string",
      "required": true,
      "display": {
        "name": "Root Element Name",
        "description": "The name for the top-level element in the XSD, which corresponds to the root of the JSON object.",
        "appPropertySupport": true
      },
      "value": "root"
    },
    {
      "name": "targetNamespace",
      "type": "string",
      "required": false,
      "display": {
        "name": "Target Namespace (Optional)",
        "description": "The target namespace URI for the generated XSD (e.g., http://www.example.com/schema).",
        "appPropertySupport": true
      }
    }
  ],
  "inputs": [
    {
      "name": "jsonSchemaString",
      "type": "string",
      "required": true
    },
    {
      "name": "rootElementName",
      "type": "string",
      "required": false
    },
    {
      "name": "targetNamespace",
      "type": "string",
      "required": false
    }
  ],
  "outputs": [
    {
      "name": "xsdString",
      "type": "string"
    },
    {
      "name": "error",
      "type": "boolean"
    },
    {
      "name": "errorMessage",
      "type": "string"
    }
  ]
}
